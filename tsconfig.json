{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "lib": [
      "esnext",
      "es5",
      "dom",
      "es2015", "es2015.core", "es2015.collection"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "skipLibCheck": false,
    "rootDir": "./src",
    "outDir": "./lib"
  },
  "include": ["src/**/*.js", "src/types.d.ts"],
  "exclude": ["src/client-template.js"]
}